<div style = "display: flex; align-items: center; justify-content: center; height: 100vh;">
  <div>
    <h1>New game listing</h1>
    <%= simple_form_for [@game] do |f| %>
      <%= f.input :title %>
      <%= f.input :description %>
      <%= f.input :price %>
      <%= f.input :categories, as: :check_boxes, collection: Category.all, label_method: :name, value_method: :id %>
      <%= f.input :photo, as: :file %>
      <%= f.submit %>
    <% end %>
  </div>
</div>
